<Page
    x:Class="DoomLauncher.DoomPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:DoomLauncher"
    xmlns:animations="using:CommunityToolkit.WinUI.Animations"
    d:DataContext="{d:DesignInstance Type=local:DoomEntry}"
    mc:Ignorable="d"
    Background="Transparent"
>
    <Grid
        RowDefinitions="Auto,*,Auto,Auto"
        AllowDrop="True"
        DragEnter="Root_DragEnter"
        DragLeave="Root_DragLeave"
    >
        <Image
            Grid.RowSpan="4"
            Source="{x:Bind local:DoomPage.GetCurrentBackground(entry.ImageFiles, entry.SelectedImageIndex), Mode=OneWay}"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Opacity="0.25"
            Stretch="UniformToFill"
        />
        <StackPanel
            Grid.RowSpan="4"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Visibility="{x:Bind local:XamlHelper.HasNoItems(entry.ModFiles.Count), Mode=OneWay}"
        >
            <TextBlock
                FontSize="24"
                Text="Перетащите или выберите файлы"
                TextWrapping="WrapWholeWords"
            />
            <FontIcon Glyph="&#xF0AD;" Margin="8,4,0,0" FontSize="24" VerticalAlignment="Center" />
        </StackPanel>
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto,Auto">
            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                Margin="16,0"
                Text="{x:Bind entry.Name, Mode=OneWay}"
                FontSize="18"
                Style="{ThemeResource BaseTextBlockStyle}"
                TextWrapping="NoWrap"
            />
            <DropDownButton Grid.Column="1" Margin="4,8">
                <DropDownButton.Flyout>
                    <MenuFlyout
                        Placement="Bottom"
                        x:Name="mfAppendFile"
                    />
                </DropDownButton.Flyout>
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Symbol="Add" Height="18" Margin="0,0,4,0"/>
                    <TextBlock>Добавить</TextBlock>
                </StackPanel>
            </DropDownButton>
            <DropDownButton Grid.Column="2" Margin="4,8" VerticalAlignment="Center">
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Text="Настроить сборку" Click="EditMod_Click">
                            <MenuFlyoutItem.Icon>
                                <SymbolIcon Symbol="Edit" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="Дублировать сборку" Click="CopyMod_Click">
                            <MenuFlyoutItem.Icon>
                                <SymbolIcon Symbol="Copy" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="Экспортировать сборку" Click="ExportMod_Click">
                            <MenuFlyoutItem.Icon>
                                <SymbolIcon Symbol="Download" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="Удалить сборку" Click="RemoveMod_Click">
                            <MenuFlyoutItem.Icon>
                                <SymbolIcon Symbol="Delete" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </DropDownButton.Flyout>
                <SymbolIcon Symbol="More"/>
            </DropDownButton>
            <Button Grid.Column="3" Width="180" Margin="4,8,8,8" VerticalAlignment="Center" Click="Start_Click" Style="{ThemeResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE7FC;" Margin="0,0,4,0" />
                    <TextBlock>Играть</TextBlock>
                </StackPanel>
            </Button>
        </Grid>
        <ListView 
            Grid.Row="1"
            SelectionMode="None"
            CanReorderItems="True"
            AllowDrop="True"
            ItemsSource="{x:Bind entry.ModFiles}"
            IsMultiSelectCheckBoxEnabled="False"
        >
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <Grid ColumnDefinitions="*,Auto,Auto">
                        <TextBlock
                            Text="{x:Bind local:DoomPage.GetFileTitle((x:String))}"
                            VerticalAlignment="Center"
                        />
                        <Button
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Click="OpenContainFolder_Click"
                            Style="{ThemeResource EllipsisButton}"
                            Height="40"
                            Width="40"
                            ToolTipService.ToolTip="Открыть расположение файла"
                        >
                            <FontIcon Glyph="&#xE838;" FontSize="16" />
                        </Button>
                        <Button
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            Click="RemoveFile_Click"
                            Style="{ThemeResource EllipsisButton}"
                            Height="40"
                            Width="40"
                            ToolTipService.ToolTip="Удалить ссылку на файл"
                        >
                            <FontIcon Glyph="&#xE894;" FontSize="16" />
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ScrollViewer
            Grid.Row="2"
            MaxHeight="256"
            Background="{ThemeResource AcrylicInAppFillColorBaseBrush}"
            Margin="8"
            CornerRadius="8"
            Visibility="{x:Bind local:XamlHelper.HasText(entry.LongDescription)}"
        >
            <TextBlock
                Margin="8"
                FontSize="16"
                Text="{x:Bind entry.LongDescription, Mode=OneWay}"
                TextWrapping="WrapWholeWords"
            />
        </ScrollViewer>
        <StackPanel
            Grid.Row="3"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
        >
            <Button
                ToolTipService.ToolTip="Добавить фон"
                Click="AddBackground_Click"
                Style="{ThemeResource EllipsisButton}"
                Height="40"
                Width="40"
            >
                <FontIcon Glyph="&#xE7C5;" FontSize="16" />
            </Button>
            <Button
                ToolTipService.ToolTip="Предыдущий фон"
                Click="PreviousBackground_Click" 
                Style="{ThemeResource EllipsisButton}"
                Height="40"
                Width="40"
                IsEnabled="{x:Bind local:XamlHelper.HasMoreItems(entry.ImageFiles.Count, 1), Mode=OneWay}"
            >
                <FontIcon Glyph="&#xE892;" FontSize="16" />
            </Button>
            <Button
                ToolTipService.ToolTip="Следующий фон"
                Click="NextBackground_Click" 
                Style="{ThemeResource EllipsisButton}"
                Height="40"
                Width="40"
                IsEnabled="{x:Bind local:XamlHelper.HasMoreItems(entry.ImageFiles.Count, 1), Mode=OneWay}"
            >
                <FontIcon Glyph="&#xE893;" FontSize="16" />
            </Button>
            <Button
                ToolTipService.ToolTip="Удалить фон"
                Style="{ThemeResource EllipsisButton}"
                Click="RemoveBackground_Click"
                Height="40"
                Width="40"
                IsEnabled="{x:Bind local:XamlHelper.HasMoreItems(entry.ImageFiles.Count, 0), Mode=OneWay}"
            >
                <FontIcon Glyph="&#xE74D;" FontSize="16" />
            </Button>
        </StackPanel>
        <Border
            x:Name="DropHelper"
            Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
            Grid.RowSpan="4"
            AllowDrop="True"
            DragOver="DropHelper_DragOver"
            Drop="DropHelper_Drop"
            Visibility="Collapsed"
        >
            <animations:Implicit.ShowAnimations>
                <animations:OpacityAnimation Duration="0:0:0.3" From="0" To="1.0"/>
            </animations:Implicit.ShowAnimations>
            <animations:Implicit.HideAnimations>
                <animations:OpacityAnimation Duration="0:0:0.3" From="1.0" To="0"/>
            </animations:Implicit.HideAnimations>
            <TextBlock
                FontSize="24"
                Margin="8"
                Text="Отпустите файлы, чтобы добавить их в сборку"
                TextWrapping="WrapWholeWords"
                HorizontalAlignment="Stretch"
                TextAlignment="Center"
                VerticalAlignment="Center"
            />
        </Border>
    </Grid>
</Page>
