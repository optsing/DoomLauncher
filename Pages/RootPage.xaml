<Page
    x:Class="DoomLauncher.RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DoomLauncher"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
>
    <Grid RowDefinitions="Auto,*">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="swMain.DisplayMode" Value="Inline" />
                        <Setter Target="swMain.IsPaneOpen" Value="true" />
                        <Setter Target="gridPane.Background" Value="Transparent" />
                        <!--<Setter Target="buttonMenu.Visibility" Value="Collapsed" />-->
                        <!--<Setter Target="frameMain.CornerRadius" Value="8,0,0,0" />-->
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <SplitView
            x:Name="swMain"
            IsPaneOpen="True"
            OpenPaneLength="256"
            CompactPaneLength="48"
            Grid.RowSpan="2"
            DisplayMode="Overlay"
            PaneBackground="Transparent"
        >
            <SplitView.Pane>
                <Grid
                    x:Name="gridPane"
                    Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"
                    CornerRadius="8"
                    RowDefinitions="48,Auto,*,Auto"
                >
                    <Button Grid.Row="1" Click="Button_Click" HorizontalAlignment="Stretch" Margin="8">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Add" Margin="0,0,4,0" />
                            <TextBlock>Создать сборку</TextBlock>
                        </StackPanel>
                    </Button>
                    <ListView
                        x:Name="DoomList"
                        SelectionMode="Single"
                        Grid.Row="2"
                        VerticalAlignment="Stretch"
                        IsItemClickEnabled="True"
                        ItemsSource="{x:Bind settings.Entries}"
                        SelectionChanged="DoomList_SelectionChanged"
                        AllowDrop="True"
                        CanReorderItems="True"
                    >
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:DoomEntry">
                                <StackPanel
                                    Orientation="Vertical"
                                    Padding="0,8"
                                >
                                    <StackPanel.ContextFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem Text="Настроить сборку" Click="EditMod_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <SymbolIcon Symbol="Edit" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutItem Text="Удалить сборку" Click="RemoveMod_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <SymbolIcon Symbol="Delete" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </StackPanel.ContextFlyout>
                                    <TextBlock Text="{x:Bind Name, Mode=OneWay}" VerticalAlignment="Center" FontSize="16"/>
                                    <TextBlock
                                        Text="{x:Bind Description, Mode=OneWay}"
                                        Visibility="{x:Bind local:RootPage.HasText(Description), Mode=OneWay}"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        TextWrapping="WrapWholeWords"
                                    />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <Button
                        Grid.Row="3"
                        Click="SettingsButton_Click"
                        Margin="8"
                        HorizontalAlignment="Stretch"
                    >
                        <StackPanel Orientation="Horizontal">
                            <AnimatedIcon Height="18" Margin="0,0,4,0">
                                <AnimatedIcon.Source>
                                    <animatedvisuals:AnimatedSettingsVisualSource />
                                </AnimatedIcon.Source>
                                <AnimatedIcon.FallbackIconSource>
                                    <SymbolIconSource Symbol="Setting"/>
                                </AnimatedIcon.FallbackIconSource>
                            </AnimatedIcon>
                            <TextBlock>Настройки</TextBlock>
                        </StackPanel>
                    </Button>
                </Grid>
            </SplitView.Pane>
            <Frame
                Margin="0,48,0,0"
                CornerRadius="8"
                x:Name="frameMain"
                Background="{ThemeResource CustomColor}"
            />
        </SplitView>
        <Grid
            x:Name="titleBar"
            Height="48"
            Grid.Row="0"
            ColumnDefinitions="Auto,*"
        >
            <Button
                x:Name="buttonMenu"
                Grid.Column="0"
                Width="48"
                Height="48"
                Margin="4,0,0,0"
                Click="ButtonMenu_Click"
                Style="{ThemeResource PaneToggleButtonStyle}" />
            <TextBlock
                Grid.Column="1"
                Text="GZDoom Launcher"
                Margin="8,0,0,0"
                VerticalAlignment="Center"
                Style="{ThemeResource BaseTextBlockStyle}"
            />
        </Grid>
        <controls:Loading
            x:Name="progressIndicator"
            Background="{ThemeResource CustomBackdropColor}"
            Grid.RowSpan="2"
        >
            <ProgressRing
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
            />
        </controls:Loading>
    </Grid>
</Page>
